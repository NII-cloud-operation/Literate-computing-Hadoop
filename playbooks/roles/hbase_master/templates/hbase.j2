export HBASE_HOME=/usr/hdp/current/hbase-master
export HBASE_CONF_DIR="/etc/hbase/conf"

export HBASE_PID_DIR={{ hbase_pid_dir }}
export HBASE_LOG_DIR={{ hbase_log_dir }}
export HBASE_IDENT_STRING=hbase

